<header>
  <div class="container">
    <div class="logo">
      <a href="/">
        <img src="/images/EllaRisesLogo.png" alt="Ella Rises">
      </a>
    </div>
    
    <nav class="header-nav">
      <a href="/">Home</a>
      <a href="/about">About</a>
      <a href="https://givebutter.com/EllaRises" class="btn-primary donate-btn" target="_blank" rel="noopener noreferrer">Donate <img src="/images/EllaRisesHeart.png" alt="" class="donate-heart"></a>
      <% if (isLoggedIn) { %>
        <div class="dropdown">
          <a href="/dashboard" class="dropdown-toggle">Dashboard <i class="fa-solid fa-chevron-down"></i></a>
          <div class="dropdown-menu">
            <% if (isManager) { %>
              <a href="/dashboard">Dashboard Overview</a>
              <a href="/participants">Participants</a>
            <% } %>
            <a href="/events">Events</a>
            <% if (isManager) { %>
              <a href="/users">Users</a>
            <% } %>
            <a href="/milestones">Milestones</a>
            <% if (isManager) { %>
              <a href="/surveys">Surveys</a>
              <a href="/donations">Donations</a>
            <% } %>
          </div>
        </div>
        <a href="/profile">Profile</a>
        <a href="/auth/logout" class="btn-logout">Logout</a>
      <% } else { %>
        <a href="/login">Login</a>
      <% } %>
    </nav>
    
    <button class="menu-toggle" aria-label="Toggle menu" aria-expanded="false">
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
      <span class="hamburger-line"></span>
    </button>
  </div>
  
  <nav class="header-nav-mobile">
    <a href="/">Home</a>
    <a href="/about">About</a>
    <a href="https://givebutter.com/EllaRises" class="btn-primary donate-btn" target="_blank" rel="noopener noreferrer">Donate <img src="/images/EllaRisesHeart.png" alt="" class="donate-heart"></a>
    <% if (isLoggedIn) { %>
      <div class="dropdown-mobile">
        <a href="/dashboard" class="dropdown-toggle-mobile">Dashboard <i class="fa-solid fa-chevron-down"></i></a>
        <div class="dropdown-menu-mobile">
          <% if (isManager) { %>
            <a href="/dashboard">Dashboard Overview</a>
            <a href="/participants">Participants</a>
          <% } %>
          <a href="/events">Events</a>
          <% if (isManager) { %>
            <a href="/users">Users</a>
          <% } %>
          <a href="/milestones">Milestones</a>
          <% if (isManager) { %>
            <a href="/surveys">Surveys</a>
            <a href="/donations">Donations</a>
          <% } %>
        </div>
      </div>
      <a href="/profile">Profile</a>
      <a href="/auth/logout" class="btn-logout">Logout</a>
    <% } else { %>
      <a href="/login">Login</a>
    <% } %>
  </nav>
</header>
